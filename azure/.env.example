# Azure Environment Variables Example
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration - Chat Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=irado_chat
DATABASE_USER=irado
DATABASE_PASSWORD=irado123

# Database Configuration - Bedrijfsklanten Database
BEDRIJFSKLANTEN_DB_HOST=localhost
BEDRIJFSKLANTEN_DB_PORT=5433
BEDRIJFSKLANTEN_DB_NAME=irado_bedrijfsklanten
BEDRIJFSKLANTEN_DB_USER=irado
BEDRIJFSKLANTEN_DB_PASSWORD=irado123

# External APIs
OPEN_POSTCODE_API_BASE_URL=https://openpostcode.nl/api
ADDRESS_VALIDATION_ENABLED=true
SERVICE_AREA_VALIDATION_ENABLED=true

# Application Configuration
FLASK_ENV=development
NODE_ENV=development
PYTHONPATH=/app

# Security
CHAT_BASIC_AUTH_USER=irado
CHAT_BASIC_AUTH_PASSWORD=20Irado25!

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Azure Configuration (for production)
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=irado-rg
AZURE_LOCATION=westeurope
AZURE_CONTAINER_REGISTRY=irado
AZURE_KEY_VAULT=irado-keyvault
AZURE_STORAGE_ACCOUNT=iradostorage

# Container Configuration
CONTAINER_GROUP_NAME=irado-chatbot-system
CONTAINER_CPU=2
CONTAINER_MEMORY=4

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=true

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_ENABLED=false

# Development Configuration
DEBUG=true
RELOAD=true
WATCH_FILES=true
